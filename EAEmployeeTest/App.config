<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="specFlow" type="TechTalk.SpecFlow.Configuration.ConfigurationSectionHandler, TechTalk.SpecFlow" />
    <section name="EATestConfiguration" type="EAAutoFramework.ConfigElement.EATestConfiguration, EAAutoFramework"/>
  </configSections>
<specFlow>
  <unitTestProvider name="MSTest"></unitTestProvider>
    <!-- For additional details on SpecFlow configuration options see http://go.specflow.org/doc-config -->
  <stepAssemblies>
      <!-- This attribute is required in order to use StepArgument Transformation as described here; 
    https://github.com/marcusoftnet/SpecFlow.Assist.Dynamic/wiki/Step-argument-transformations  -->
      <stepAssembly assembly="SpecFlow.Assist.Dynamic" />
    </stepAssemblies></specFlow>

  <EATestConfiguration>
    <testSettings>
      <testSetting name="staging" aut="http://localhost/" browser="Firefox" testType="SmokeTest" isLog="Y" logPath="C:\\EAAutoLogs\\" />
      <testSetting name="preprod" aut="http://localhost/" browser="IE" testType="Regression" isLog="Y" logPath="C:\\EAAutoLogs\\" />
      <testSetting name="production" aut="http://localhost/" browser="Chrome" testType="SmokeTest" isLog="Y" logPath="C:\\EAAutoLogs\\" />
    </testSettings>
  </EATestConfiguration>

</configuration>